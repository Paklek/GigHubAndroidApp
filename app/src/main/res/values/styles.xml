<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryOrange</item>
        <item name="android:shadowColor">@color/primaryDark</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <!--<item name="buttonPrimary">@color/primaryButton</item>-->
    </style>


    <style name="Biasa" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryDark</item>
        <item name="buttonTint">@color/primaryDark</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:spinnerDropDownItemStyle">@style/MySpinnerStyle</item>
        <item name="android:textViewStyle">@style/AppTheme.Primary</item>
        <item name="titleTextColor">@color/primaryDark</item>
        <item name="android:colorForeground">@color/primaryDark</item>
        <!--<item name="android:foreground">@color/primaryDark</item>-->
        <!--<item name="android:foregroundTint">@color/primaryDark</item>-->
        <item name="android:panelColorForeground">@color/primaryDark</item>
        <!--<item name="color"-->
        <!--<item name="android:buttonTintMode"></item>-->
        <!--<item name="android:backgroundTint">@color/primaryDark</item>-->
        <!--<item name="android:textColorHint">@color/primaryDark</item>-->
        <!--<item name="buttonPrimary">@color/primaryButton</item>-->
    </style>
    


    <style name="MySpinnerStyle" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:textAppearance">@color/primaryDark</item>
    </style>


    <style name="AppTheme.NoActionBar.Child">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorTextDark</item>
    </style>
    <style name="AppTheme.Primary">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="buttonTint">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="labeltextprimary">
        <item name="android:textColorHint">@color/primaryOrange</item>
        <item name="colorAccent">@color/primaryOrange</item>
        <item name="colorControlNormal">@color/primaryOrange</item>
        <item name="colorControlActivated">@color/primaryOrange</item>
    </style>
</resources>
