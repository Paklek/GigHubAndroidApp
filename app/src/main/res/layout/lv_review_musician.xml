<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_review_message_lvreviewmusician"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/border_orange">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_gravity="center"
            android:id="@+id/img_user_reviewer_lvreviewmusician"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/default_user"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RatingBar
                android:id="@+id/ratbar_lvreviewmusician"
                android:layout_gravity="center"
                android:numStars="5"
                android:rating="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:progressTint="@color/primaryOrange"/>
            <TextView
                android:id="@+id/tv_nama_reviewer_lvreviewmusician"
                android:layout_marginLeft="10dp"
                android:textColor="@color/primaryDark"
                android:text="username"
                android:textSize="11pt"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_pesan_review_lvreviewmusician"
                android:layout_gravity="left"
                android:textSize="9pt"
                android:text="message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#707070"/>
            <View
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#c0c0c0"/>
            <TextView
                android:id="@+id/tv_tanggal_review_lvreviewmusician"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textColor="#707070"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>