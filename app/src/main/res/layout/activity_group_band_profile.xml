<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/tools"
android:id="@+id/card_view"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="7dp">
<android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/frame_gig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:background="@drawable/transparent_dark"
            android:id="@+id/img_cover_band_grupband_grupbandprofileactivity"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:fitsSystemWindows="true"
            android:layout_height="200dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tv_nama_grupband_grupbandprofileactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nama grupband"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:columnCount="3"
        android:rowCount="3"
        android:padding="10dp">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/img_photo_grupband_grupbandprofileactivity"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_column="0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/default_user"
            app:siBorderWidth="2dp"
            app:siBorderColor="#ddd"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/tv_kota_grupband_grupbandprofileactivity"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kota"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_harga_grupband_grupbandprofileactivity"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnSpan="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="1.2 KM"
            />
        <TextView
            android:id="@+id/tv_genre_grupband_grupbandprofileactivity"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="genre"
            android:layout_marginLeft="10dp"/>

    </GridLayout>

    <TextView
        android:id="@+id/tv_anggota_grupbandprofileactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="anggota"/>
    <TextView
        android:id="@+id/tv_posisi_grupbandprofileactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="posisi"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_deskripsi_grupbandprofileactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="posisi"
        android:layout_marginBottom="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/primaryDark"/>
    <LinearLayout
        android:id="@+id/ll_edit_groupbandprofileactivity"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_nama_band_groupbandactivity"
            android:hint="Band Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_harga_band_groupbandactivity"
                android:hint="Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_descriptions_band_groupbandactivity"
                android:hint="Descriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_basis_group_groupbandactivity"
                android:hint="Basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_kota_band_groupbandactivity"
                android:hint="@string/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_youtube_url_groupbandactivity"
                android:hint="Youtube Video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_website_url_groupbandactivity"
                android:hint="Website Url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_username_soundcloud_groupbandactivity"
                android:hint="Username Soundcloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_username_reverbnation_groupbandactivity"
                android:hint="Username Reverbnation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_edit_profile_group_groupbandactivity"
        android:textColor="@color/colorAccent1"
        android:text="EDIT PROFILE GROUP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border_white"/>
    <Button
        android:id="@+id/btn_save_profile_group_groupbandactivity"
        android:textColor="@color/colorAccent1"
        android:text="@string/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border_white"/>

    <Button
        android:id="@+id/btn_add_anggota_groupbandprofileactivity"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border_white"
        android:textColor="@color/colorAccent1"
        android:text="Add Musician to Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_remove_anggota_groupbandprofileactivity"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border_white_negative"
        android:textColor="@color/colorAccent1"
        android:text="Remove Musician from Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</android.support.v7.widget.LinearLayoutCompat>


</ScrollView>
