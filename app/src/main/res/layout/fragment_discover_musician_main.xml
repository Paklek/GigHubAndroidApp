<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2">
        <ImageView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="2"
            android:src="@android:drawable/ic_menu_mapmode"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:text="States "
            />
        <Spinner
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/provinsi_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/state_spinner">
        </Spinner>

        <ImageView
            android:layout_row="2"
            android:layout_column="0"
            android:layout_rowSpan="2"
            android:src="@android:drawable/ic_menu_mapmode"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:text="City :"
            />
        <Spinner
            android:layout_row="3"
            android:layout_column="1"
            android:id="@+id/kota_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/city_spinner">
        </Spinner>

        <android.support.v4.widget.Space
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_height="20dp"
            android:layout_gravity="fill_horizontal"/>

        <!--<ImageView-->
            <!--android:layout_row="5"-->
            <!--android:layout_column="0"-->
            <!--android:layout_rowSpan="2"-->
            <!--android:src="@android:drawable/ic_menu_mapmode"-->
            <!--android:layout_gravity="center"-->
            <!--/>-->
        <!--<TextView-->
            <!--android:layout_row="5"-->
            <!--android:layout_column="1"-->
            <!--android:text="Date : "-->
            <!--/>-->
        <!--<Button-->
            <!--android:id="@+id/btn_date_search"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_row="6"-->
            <!--android:layout_column="1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:text="Date Time"-->
            <!--android:textColor="@color/colorAccent"-->
            <!--android:background="@drawable/button_border_white" />-->

        <android.support.v4.widget.Space
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_height="20dp"
            android:layout_gravity="fill_horizontal"/>

        <ImageView
            android:layout_row="8"
            android:layout_column="0"
            android:layout_rowSpan="2"
            android:src="@android:drawable/ic_menu_view"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_row="8"
            android:layout_column="1"
            android:text="Role : "
            />
        <RadioGroup
            android:id="@+id/radiogroup_tipe_discovermusician"
            android:layout_row="9"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_columnSpan="2"
            android:layout_column="0">
            <RadioButton
                android:id="@+id/radio_tipe_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Group"/>
            <RadioButton
                android:id="@+id/radio_tipe_solo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Solo"/>
            <RadioButton
                android:id="@+id/radio_tipe_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="All"/>
        </RadioGroup>

        <android.support.v4.widget.Space
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_height="20dp"
            android:layout_gravity="fill_horizontal"/>

        <ImageView
            android:layout_row="10"
            android:layout_column="0"
            android:layout_rowSpan="2"
            android:src="@android:drawable/ic_media_play"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_row="10"
            android:layout_column="1"
            android:text="Music Genre"
            />
        <EditText
            android:id="@+id/et_select_genre"
            android:layout_gravity="fill_horizontal"
            android:layout_row="11"
            android:layout_column="1"
            android:ems="10"
            android:hint="Select Genres"
            android:focusable="false"/>

        <android.support.v4.widget.Space
            android:layout_row="12"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_height="100dp"
            android:layout_gravity="fill_horizontal"/>
        <Button
            android:id="@+id/btn_search"
            android:layout_row="14"
            android:layout_columnSpan="2"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:textColor="@color/colorAccent"
            android:text="Search"
            android:background="@drawable/button_border_white"
            android:layout_column="0" />

    </GridLayout>
</android.support.v4.widget.NestedScrollView>