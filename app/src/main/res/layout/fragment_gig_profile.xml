<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:fillViewport="false">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.gighub.app.ui.fragment.GigProfileFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_deskripsi_gigprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi" />

    <TextView
        android:id="@+id/tv_location_gigprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="location" />

    <TextView
        android:id="@+id/tv_location_detail_gigprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="location detail" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_tanggal_mulai_gigprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Mulai" />

    <TextView

        android:id="@+id/tv_tanggal_selesai_gigprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Selesai" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Organizer :"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/img_organizer_photo_gigprofile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:src="@drawable/default_user"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_organizer_name_gigprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organizer Name"/>
            <TextView
                android:id="@+id/tv_organizer_email_gigprofile"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organizer Email"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_offer_gig_gigprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border_black"
        android:text="Gig Offer"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_view_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border_black"
        android:text="View In Map"/>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>