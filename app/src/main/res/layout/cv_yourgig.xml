<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/frame_gig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:background="@drawable/transparent_dark"
                android:id="@+id/btn_img_cover_gig_yourgig"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                android:layout_height="200dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/tv_nama_gig_yourgig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama Gig"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                android:layout_gravity="center"/>
        </FrameLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:columnCount="3"
            android:rowCount="3"
            android:padding="10dp">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/img_circle_user_yourgig"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:layout_column="0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_person_black_48dp"
                app:siBorderWidth="2dp"
                app:siBorderColor="#ddd"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/tv_location_gig_yourgig"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_tanggal_mulai_yourgig"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnSpan="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Start Date"
                />
            <TextView
                android:id="@+id/tv_deskripsi_yourgig"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="genre"
                android:layout_marginLeft="10dp"/>

        </GridLayout>
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.CardView>