<LinearLayout android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_orange">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="10dp">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:layout_column="0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ava"
                app:siBorderWidth="2dp"
                app:siBorderColor="#ddd"
                android:layout_margin="5dp"
                android:id="@+id/img1"/>
            <TextView
                android:id="@+id/musician_name"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Black Adams"
                android:textColor="@color/colorTextDark"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/musician_fee"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnSpan="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/colorTextDark"
                android:text="Rp. 200.000 / Hours"
                />
            <TextView
                android:id="@+id/musician_genres"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rock, Jazz"
                android:textColor="@color/colorTextDark"
                android:layout_marginLeft="10dp"/>

        </GridLayout>
    </LinearLayout>